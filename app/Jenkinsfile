pipeline {
    environment {
        registryCredential = 'dockerhub'
        DOMAIN = "${env.DOMAIN}"
        IMAGE = "felipecwb/todo-api"
    }

    agent any

    stages {
        stage('Build') {
            steps{
                script {
                    dockerImage = docker.build IMAGE + ":$BUILD_NUMBER", 'app'
                }
            }
        }

        stage('Testes') {
            agent {
                docker { image IMAGE + ":build.$BUILD_NUMBER" }
            }
            
            steps {
                sh './bin/test'
            }
        }

        stage('Deploy Image') {
            steps{
                script {
                    docker.withRegistry('', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Remove Unused docker image') {
            steps{
                sh "docker rmi $IMAGE:$BUILD_NUMBER"
            }
        }
    }
}