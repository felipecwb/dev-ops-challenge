pipeline {
    environment {
        DOMAIN = "${env.DOMAIN}"
        IMAGE = "felipecwb/todo-api"
    }

    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build IMAGE + ":$BUILD_NUMBER", 'app'
                }
            }
        }

        stage('Testes') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'bin/test'
                    }
                }
            }
        }

        stage('Deploy Image') {
            steps {
                script {
                    docker.withRegistry('', 'dockerhub') {
                        dockerImage.push()
                        dockerImage.push('latest')
                    }
                }
            }
        }

        stage('Remove Unused docker image') {
            steps{
                sh "docker rmi $IMAGE:$BUILD_NUMBER"
            }
        }
    }
}